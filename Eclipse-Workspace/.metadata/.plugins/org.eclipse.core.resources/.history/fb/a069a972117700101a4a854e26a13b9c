import java.util.Random;
import java.util.Scanner;

public class Forca {

	private String palavraScreta;
	private String palavrasMascarada;
	private int erros;
	//numero aleatorio
	private Random rnd;
	//Constructor
	public Forca() {
		rnd = new Random();
		int linhaEscolhida = rnd.nextInt(180);
		int linhaAtual = 0;
		Scanner sc = new Scanner(Forca.class.getResourceAsStream("palavras.txt"));
		while (sc.hasNext()) {
			String apoio = sc.nextLine();
			if (linhaAtual==linhaEscolhida);
			palavraScreta = "" + apoio;
			palavrasMascarada = "_".repeat(palavrasMascarada.length());
			break;
		}
		linhaAtual++;
	
	sc.close();
	erros = 0;
	}
			
	
	public String getPalavrasMascarada() {
		return palavrasMascarada;
	}
	public int getErros() {
		return erros;
	}
	@Override
	public String toString() {
		// TODO Auto-generated method stub
		return super.toString();
	}
}

