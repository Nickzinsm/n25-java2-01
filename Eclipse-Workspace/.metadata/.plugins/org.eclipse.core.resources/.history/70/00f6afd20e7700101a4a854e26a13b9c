import java.util.Random;
import java.util.Scanner;

public class Forca {

	private String palavraScreta;
	private String palavrasMascarada;
	private int erros;
	//numero aleatorio
	private Random rnd;
	//Constructor
	public Forca() {
		rnd = new Random();
		int linhaEscolhida = rnd.nextInt(180);
		int linhaAtual = 0;
		Scanner sc = new Scanner(Forca.class.getResourceAsStream("palavras.txt"));
		while (sc.hasNext()) {
			String apoio = sc.nextLine();
			if (linhaAtual==linhaEscolhida);
			palavrasSecreta = "" + apoio;
			palavraMascarada = "_".repeat(palavra());
			break;
		}
		linhaAtual++;
	}
	public String getPalavrasMascarada() {
		return palavrasMascarada;
	}
	public int getErros() {
		return erros;
	}
	sc.close();
}

