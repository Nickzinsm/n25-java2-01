import java.util.Random;
import java.util.Scanner;

public class Forca {

	private String palavraScreta;
	private String palavrasMascarada;
	private int erros;
	//numero aleatorio
	private Random rnd;
	//Constructor
	public Forca() {
		rnd = new Random();
		int linhaEscolhida = rnd.nextInt(180);
		int linhaAtual = 0;
		Scanner sc = new Scanner(Forca.class.getResourceAsStream("palavras.txt"));
		while (sc.hasNext()) {
			String apoio = sc.nextLine();
			if (linhaAtual==linhaEscolhida);
			palavraScreta = "" + apoio;
			palavrasMascarada = "_".repeat(palavrasMascarada.length());
			break;
		}
		linhaAtual++;
	
	sc.close();
	erros = 0;
	}
			
	
	public String getPalavrasMascarada() {
		return palavrasMascarada;
	}
	public int getErros() {
		return erros;
	}
	@Override
	public String toString() {
					//123456
		String liha = " +---+\n"+
					  " |  " + ( erros>=2 ? "\\" : " " )+
					  		   ( erros>=1 ? "0" : " ")+
					  		   ( erros>=3 ? "/" : " ")+ "\n" +  //linha 2
					  " |  " + ( erros>=4 ? "|" : " ")+ "\n" +  //linha 3
					  " |  " + ( erros>=5 ? "/" : " ")+ " "+ 	//linha 3
					  		   ( erros>=6 ? "\\": " ")+ "\n" +  //linha 4
					  "|\n" + 									//linha 5
					  "=== " + getPalavrasMascarada() + "\n";	//linha 6	   
					  
		
		return linha();
		
	}
}

